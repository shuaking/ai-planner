{
  "name": "nextjs-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.10.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "pnpm --filter web dev",
    "build": "pnpm -r build",
    "start": "pnpm --filter web start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --check \"**/*.{js,jsx,ts,tsx,css,scss,md,json,yml,yaml}\"",
    "format:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,css,scss,md,json,yml,yaml}\"",
    "test": "vitest run --reporter=dot",
    "test:watch": "vitest",
    "typecheck": "tsc -p tsconfig.base.json --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.11",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{js,jsx,ts,tsx,css,scss,md,json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
